                       ProgressiveBlock:(void (^)(NSInteger totalBytesRead, NSInteger totalBytesExpected))progressiveBlock;




-(void)fetchRealTimeDataWithSuccessBlock:(void(^)(HETBLEMattressDeviceInfo *deviceInfo))successBlock
