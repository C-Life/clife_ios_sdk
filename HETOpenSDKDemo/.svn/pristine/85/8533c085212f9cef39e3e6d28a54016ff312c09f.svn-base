    NSLog(@"sendData:%@",sendData);
    NSString *boardIP = [self getIpAddressInfo];
    if (boardIP == nil) {
        return ;
    }

    [smartlink sendData:sendData toHost:boardIP withPort:SEND_SERVER_PORT withTimeout:-1 tag:0];
  
