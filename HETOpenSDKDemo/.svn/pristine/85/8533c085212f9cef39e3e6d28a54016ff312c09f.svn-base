-(BOOL)sendPsw:(NSString *)psw
{
    if(!smartlink)
    {
        smartlink = [[HETSmartLinkMangerAPI alloc] init];
        smartlink.delegate = self;
    }
    
    NSString *boardIP = [self getIpAddressInfo];
    if (boardIP == nil) {
        return NO;
    }
    
    char head[1000];
    memset(head, 5, 1000);
    NSData *data = [NSData dataWithBytes:head length:76];
    int i=0;
    tag = 1;
    
    //报文头
    while (i<HEADER_COUNT) {
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:1 tag:tag++];
        mysleep(HEADER_PACKAGE_DELAY_TIME);
        i++;
    }
    
    i=0;
    const char *pswstr = [psw UTF8String];
    while (i<CONTENT_COUNT && start) {
        //密码头 3次89 每次间隔50毫秒
        data = [NSData dataWithBytes:head length:89];
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        //发送密码内容
        int j=0;
        while (j<strlen(pswstr)) {
            data = [NSData dataWithBytes:head length:pswstr[j]+76];
            [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
            mysleep(CONTENT_PACKAGE_DELAY_TIME);
            j++;
        }
        //内容尾
        data = [NSData dataWithBytes:head length:86];
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_CHECKSUM_BEFORE_DELAY_TIME);
        
        //
        data = [NSData dataWithBytes:head length:strlen(pswstr)+256+76];
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        [smartlink sendData:data toHost:boardIP withPort:SEND_PWD_PORT withTimeout:-1 tag:tag++];
        mysleep(CONTENT_PACKAGE_DELAY_TIME);
        
        mysleep(CONTENT_GROUP_DELAY_TIME);
        i++;
    }
    
    return YES;
}

