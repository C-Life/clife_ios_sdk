#import <Foundation/Foundation.h>
#import <UIKit/UIKit.h>

#import "HETAccount.h"


typedef void(^authenticationCompletedBlock)(HETAccount *account, NSError *error);

@interface HETAuthorize : NSObject



/**
 *  是否授权认证
 *
 *  @return   YES为已经授权登录
 */
- (BOOL)isAuthenticated;


/**
 *  授权认证
 *
 *  @param completedBlock 授权认证回调
 */
- (void)authorizeWithCompleted:(authenticationCompletedBlock)completedBlock;


/**
 *  取消授权认证
 */
- (void)unauthorize;

/**
 *  一键授权认证，无UI界面
 *
 *  @param openId         授权用户唯一标识（不传该参数创建新的帐号）
 *  @param account        帐号：手机号码或邮箱,非必须参数，可填可不填
 *  @param completedBlock 授权认证回调
 */
- (void)autoAuthorizeWithOpenId:(NSString *)openId withAccount:(NSString *)account withCompleted:(authenticationCompletedBlock)completedBlock;

@end
